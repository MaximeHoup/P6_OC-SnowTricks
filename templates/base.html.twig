									<a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('signup') }}">Inscription</a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
