<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}SnowTricks
			{% endblock %}
		</title>
		<script src="{{ asset('css/fontawesome/js/all.js') }}"></script>
		<link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
		<link rel="stylesheet" href="{{ asset('css/style.css') }}"> {% block javascripts %}{% endblock %}

		<script src="{{ asset('assets/js/scripts.js') }}" defer></script>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary" id="top">
			<div class="navbar-collapse" id="navbarST">
				<a class="navbar-brand d-none d-lg-block " href="{{ path('home') }}">&nbsp;SnowTricks</a>
				<a class="navbar-brand d-lg-none pr-5" href="{{ path('home') }}">&nbsp;SnowTricks</a>
				<ul class="navbar-nav ms-auto d-inline-block">
					<li class="nav-item d-inline-block">
						<a class="nav-link d-none d-lg-block" href="{{ path('home') }}">Accueil</a>
						<a class="nav-link d-lg-none" href="{{ path('home') }}">
							<button class="btn btn-lg btn-secondary">
								<i class="fa-solid fa-house fa-2xl"></i>
							</button>
						</a>
					</li>
					<li class="nav-item d-inline-block">
						<a class="nav-link d-none d-lg-block" href="{{ path('tricks') }}">Liste des tricks</a>
						<a class="nav-link d-lg-none" href="{{ path('tricks') }}">
							<button class="btn btn-lg btn-secondary">
								<i class="fa-solid fa-person-snowboarding fa-2xl"></i>
							</button>
						</a>
					</li>
					{% if app.user %}
						<li class="nav-item d-inline-block">
							<a class="nav-link d-none d-lg-block" href="{{ path('new') }}">Ajouter un trick</a>
							<a class="nav-link d-lg-none" href="{{ path('new') }}">
								<button class="btn btn-lg btn-secondary">
									<i class="fa-solid fa-plus fa-2xl"></i>
								</button>
							</a>
						</li>
						<li class="nav-item d-inline-block">
							<a class="nav-link d-none d-lg-block" href="{{ path('app_logout') }}">DÃ©connexion</a>
							<a class="nav-link d-lg-none" href="{{ path('app_logout') }}">
								<button class="btn btn-lg btn-secondary">
									<i class="fa-solid fa-right-from-bracket fa-2xl"></i>
								</button>
							</a>
						</li>
					{% else %}
						<li class="nav-item d-inline-block">
							<a class="nav-link d-none d-lg-block" href="{{ path('app_login') }}">Connexion</a>
							<a class="nav-link d-lg-none" href="{{ path('app_login') }}">
								<button class="btn btn-lg btn-secondary">
									<i class="fa-solid fa-user fa-2xl"></i>
								</button>
							</a>
						</li>
						<li class="nav-item d-inline-block">
							<a class="nav-link d-none d-lg-block" href="{{ path('signup') }}">Inscription</a>
							<a class="nav-link d-lg-none" href="{{ path('signup') }}">
								<button class="btn btn-lg btn-secondary">
									<i class="fa-solid fa-feather fa-2xl"></i>
								</button>
							</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</nav>
		{% block body %}{% endblock %}
	</body>
</html>
