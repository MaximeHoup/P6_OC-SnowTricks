{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section class="container my-3">
		<div class="row">
			<div class="col">
				<h1>Inscription</h1>

				{{ form_start(registrationForm) }}
				{{ form_errors(registrationForm) }}
				<div class="col my-2">{{ form_row(registrationForm.username) }}</div>
				<div class="col my-2">{{ form_row(registrationForm.Email) }}</div>
				<div class="col my-2">{{ form_row(registrationForm.password) }}</div>
				<div class="col my-2">{{ form_row(registrationForm.Photo) }}</div>
				<button type="submit" class="btn btn-primary mt-3">M'inscrire</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
