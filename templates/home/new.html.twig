{% extends 'base.html.twig' %}

{% block body %}
	<h1 class="text-center mt-5">Ajouter un nouveau trick</h1>

	{{ form_start(formTrick) }}

	{{ form_row(formTrick.name, {'attr': {'placeholder': "Nom de la figure"}}) }}
	{{ form_row(formTrick.figure_group, {'attr': {'placeholder': "Groupe auquel appartient la figure"}}) }}
	{{ form_row(formTrick.Description, {'attr': {'placeholder': "Description de la figure"}}) }}
	{{ form_row(formTrick.media) }}


	<button type="submit" class="btn btn-success">Ajouter la figure</button>

	{{ form_end(formTrick) }}

{% endblock %}
