{% block comments %}
<h1 class="text-center">Commentaires</h1>
{% for comment in comments |sort((a, b) => b.createdAt <=> a.createdAt) %}
	<div class="row border border-dark text-left bg-light py-1">
		<div class="col-2">
			<img src="{{ asset('uploads/avatars/' ~ comment.Users.Photo) }}" style="height: 5rem; width: 5rem">
		</div>
		<div class="col-3">
			<span class="font-weight-bold">{{ comment.Users.username}}</span>
		</br>le
		{{ comment.CreatedAt | date('d/m/Y') }}
	</br>à
	{{ comment.CreatedAt | date('H:i') }}
</div>
<div class="col-7">
	{{ comment.content | raw }}
</div></div>-------------------------------------------</br>{% endfor %}<nav aria-label="Pagination comments" id="comments"><ul class="pagination mt-3">{% if page != 1 %}
<li class="page-item">
	<a class="page-link" href="{{ path('show', {'Slug': trick.slug, page: page - 1}) }}">Précédent</a>
</li>{% endif %}{% for i in range(1, nbpages) %}
<li class="page-item">
	<a class="page-link" href="{{ path('show', {'Slug': trick.slug, page: i}) }}">{{i}}</a>
</li>{% endfor %}{% if page != nbpages %}
<li class="page-item">
	<a class="page-link" href="{{ path('show', {'Slug': trick.slug, page: page + 1}) }}">Suivant</a>
</li>{% endif %}</ul></nav>{% endblock %}
