{% block comments %}
<h1 class="text-center">Commentaires</h1>
{% for comment in comments |sort((a, b) => b.createdAt <=> a.createdAt) %}
	<div class="row border border-dark text-left bg-light">
		<div class="col-2">
			<img src="{{ asset('uploads/avatars/' ~ comment.Users.Photo) }}" class="border border-dark" style="height: 5rem; width: 5rem">
		</div>
		<div class="col-3">
			<span class="font-weight-bold">{{ comment.Users.username}}</span>
			(le
			{{ comment.CreatedAt | date('d/m/Y') }}
			Ã 
			{{ comment.CreatedAt | date('H:i') }})
		</div>
		<div class="col-7">{{ comment.content | raw }}
		</div>
	</div>
	-------------------------------------------</br>{% endfor %}<div class="row mt-3 mx-auto justify-content-center" style="width: 200px">
<div class="col-4">
	<nav aria-label="Pagination comments">
		<ul class="pagination">
			{% if page != 1 %}
				<li class="page-item">
					<a class="page-link" href="{{ path('show', {id: id , slug: trick.slug, page: page - 1}) }}">Previous</a>
				</li>
			{% endif %}

			{% for i in range(1, nbpages) %}
				<li class="page-item">
					<a class="page-link" href="{{ path('show', {id: id , slug: trick.slug, page: i}) }}">{{i}}</a>
				</li>
			{% endfor %}

			{% if page != nbpages %}
				<li class="page-item">
					<a class="page-link" href="{{ path('show', {id: id , slug: trick.slug, page: page + 1}) }}">Next</a>
				</li>
			{% endif %}
		</ul>
	</nav>
</div></div>{% endblock %}
