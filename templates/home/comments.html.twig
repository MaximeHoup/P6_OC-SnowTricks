{% block comments %}
	<h1 class="text-center">Commentaires</h1>
	<div class="col">
		{% for comment in comments |sort((a, b) => b.createdAt <=> a.createdAt) %}
			<div><img src="{{ asset('uploads/avatars/' ~ comment.Users.Photo) }}">
				{{ comment.Users.username}}
				le
				{{ comment.CreatedAt | date('d/m/Y') }}
				Ã 
				{{ comment.CreatedAt | date('H:i') }}:
				{{ comment.content | raw }}</div>


			-------------------------------------------</br>
	{% endfor %}
	<div class="row mt-3">
		<nav aria-label="Page navigation comments">
			<ul class="pagination">
				{% if page != 1 %}
					<li class="page-item">
						<a class="page-link" href="{{ path('show', {id: id , name: trick.name, page: page - 1}) }}">Previous</a>
					</li>
				{% endif %}

				{% for i in range(1, nbpages) %}
					<li class="page-item">
						<a class="page-link" href="{{ path('show', {id: id , name: trick.name, page: i}) }}">{{i}}</a>
					</li>
				{% endfor %}

				{% if page != nbpages %}
					<li class="page-item">
						<a class="page-link" href="{{ path('show', {id: id , name: trick.name, page: page + 1}) }}">Next</a>
					</li>
				{% endif %}
			</ul>
		</nav>
	</div>
</div>{% endblock %}
