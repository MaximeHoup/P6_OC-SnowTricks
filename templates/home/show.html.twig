{% extends 'base.html.twig' %}


{% block body %}
	<div class="row text-center">
		<h1 class="mt-5 mb-5">{{ trick.name }}</h1>
		<img class="mainimg" src="{{ asset('uploads/mainmediatricks/' ~ trick.mainMedia) }}">
		<hr class="mt-3 mb-3">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">{{ message }}</div>
		{% endfor %}
		<div>Figure ajoutée le
			{{ trick.CreatedAt | date('d/m/Y') }}
			à
			{{ trick.CreatedAt | date('H:i') }}
			par .
		</div>
		<div>Groupe:
			{{ trick.FigureGroup }}
		</div>
		<hr class="mt-3 mb-3">
		<div>{{ trick.Description }}</div>
		<hr class="mt-3 mb-3">

		<div class="row">

			<div id="mycarousel" class="carousel slide" data-ride="carousel">
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="w-50" src="https://via.placeholder.com/150" alt="Image principale"/>
					</div>

					<div class="carousel-item">
						<img class="d-block w-100" src="https://via.placeholder.com/200" alt="aa">
					</div>

					<div class="carousel-item">
						<img class="d-block w-100" src="https://via.placeholder.com/160" alt="aa">
					</div>
				</div>
				<a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
			</div>
		</div>

		<hr class="mt-3 mb-3">
		<div class="row">
			<h1 class="text-center">Ajouter un commentaire</h1>
			{{ form_start(formComment) }}
			{{ form_row(formComment.Content) }}

			<button type="submit" class="btn btn-success">
				Ajouter le commentaire
			</button>

			{{ form_end(formComment) }}

			<hr class="mt-3 mb-3">
			{% include 'home/comments.html.twig' %}
		</div>
	</div>
{% endblock %}
