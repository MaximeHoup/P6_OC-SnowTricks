{% extends 'base.html.twig' %}


{% block body %}
	<div class="row text-center">
		<h1 class="mt-5 mb-5">{{ trick.name }}</h1>
		<img class="mainimg" src="{{ asset('uploads/mainmediatricks/' ~ trick.mainMedia) }}">
		<hr class="mt-3 mb-3">
		<div>Figure ajoutée le
			{{ trick.CreatedAt | date('d/m/Y') }}
			à
			{{ trick.CreatedAt | date('H:i') }}
			par.
		</div>
		<div>Groupe:
			{{ trick.figureGroup.name }}
		</div>
		<hr class="mt-3 mb-3">
		<div>{{ trick.Description }}</div>
		<hr class="mt-3 mb-3">

		<div class="row">

			<div id="mycarousel" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
					<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
					<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				</ol>
				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="w-50" src="{{ asset('uploads/mainmediatricks/' ~ trick.mainMedia) }}" alt="Image principale"/>
					</div>

					<div class="carousel-item">
						<img class="w-50" src="{{ asset('uploads/mainmediatricks/' ~ trick.mainMedia) }}" alt="Image secondaire">
					</div>

				</div>
				<a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
			</div>
		</div>

		<div class="row">
			<div class="col">
				{% for video in videos %}
					<iframe width="560" height="315" src="{{video.source}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
				{% endfor %}
			</div>
		</div>

		<hr class="mt-3 mb-3">
		<div class="row">
			<h1 class="text-center">Ajouter un commentaire</h1>
			{% if app.user %}
				{{ form_start(formComment) }}
				{{ form_row(formComment.Content) }}

				<button type="submit" class="btn btn-success">
					Ajouter le commentaire
				</button>

				{{ form_end(formComment) }}
			{% else %}
				<div>Seuls les utilisateurs connectés peuvent laisser des commentaires.</div>
				<div>Pour laisser un commentaire, veuillez vous
					<a href="{{ path('signup') }}">inscrire</a>.</div>
			{% endif %}

			<hr class="mt-3 mb-3">
			{% include 'home/comments.html.twig' %}</div>
	</p>
</div>{% endblock %}
